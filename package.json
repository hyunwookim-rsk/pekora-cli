{
  "name": "pekora-cli",
  "version": "1.0.0",
  "description": "I want to go home faster",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && npm run chmod",
    "package": "pkg . --output peko",
    "chmod": "chmod +x ./build/index.js",
    "test": "echo \"Error: no test specified\" && exit",
    "local": "npm run build && npm i -g && peko -p asdfasf -b asdfasf -c asfassdf",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts"
  },
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stories2/pekora-cli.git"
  },
  "bin": {
    "peko": "./build/index.js"
  },
  "pkg": {
    "scripts": "./build/**/*.js"
  },
  "author": "stories2@gapmoe.net",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stories2/pekora-cli/issues"
  },
  "type": "module",
  "homepage": "https://github.com/stories2/pekora-cli#readme",
  "devDependencies": {
    "@types/clear": "^0.1.2",
    "@types/figlet": "^1.5.5",
    "@types/node": "^18.7.23",
    "@types/yargs": "^17.0.13",
    "nodemon": "^2.0.20",
    "pkg": "^5.8.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "clear": "^0.1.0",
    "commander": "^9.4.1",
    "figlet": "^1.5.2",
    "inquirer": "^9.1.2",
    "yargs": "^17.6.0"
  }
}
